<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link
		rel="stylesheet" href="https://bootswatch.com/5/litera/bootstrap.min.css">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}


	</head>
	<body>
		<style>
			body {
				padding-bottom: 75px;
			}
		</style>
		<div class="d-none d-lg-block">
			<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
				<div class="container-fluid">
					<a class="navbar-brand" href="/">SnowTricks</a>

					<div class="navbar navbar-expand-lg" id="navbarColor01" style="">
						<ul class="navbar-nav me-auto">
							{% if is_granted ('ROLE_USER') %}
								<li class="nav-item">
									<a class="nav-link" href="{{path('trick_new')}}">Créer une figure</a>
								</li>
							{% endif %}
							{% if is_granted ('ROLE_USER') == false %}
								<li class="nav-item">
									<a class="nav-link" href="{{path('login')}}">Se connecter</a>
								</li>
							{% endif %}
							{% if is_granted ('ROLE_USER') %}
								<li class="nav-item">
									<a class="nav-link" href="{{path('app_logout')}}">Se déconnecter</a>
								</li>
							{% endif %}
							<li class="nav-item">
								<a class="nav-link" href="{{path('register')}}">S'inscrire</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</div>

		<div class="d-lg-none">
			<nav class="navbar navbar-expand-md navbar-expand-sm fixed-bottom navbar-dark bg-primary">
				<div class="container-fluid">

					<div class="navbar navbar-expand-sm-md  mx-auto" id="navbarColor01" style="">
						<ul class="navbar-nav">

						<li class="nav-item">
									<a class="nav-link" href="{{path('home')}}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house-door-fill" viewBox="0 0 16 16">
  <path d="M6.5 14.5v-3.505c0-.245.25-.495.5-.495h2c.25 0 .5.25.5.5v3.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5v-7a.5.5 0 0 0-.146-.354L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.354 1.146a.5.5 0 0 0-.708 0l-6 6A.5.5 0 0 0 1.5 7.5v7a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5z"/>
</svg></a>
								</li>
				{% if is_granted ('ROLE_USER') %}
								<li class="nav-item">
									<a class="nav-link" href="{{path('trick_new')}}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bookmark-plus-fill" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M2 15.5V2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.74.439L8 13.069l-5.26 2.87A.5.5 0 0 1 2 15.5zm6.5-11a.5.5 0 0 0-1 0V6H6a.5.5 0 0 0 0 1h1.5v1.5a.5.5 0 0 0 1 0V7H10a.5.5 0 0 0 0-1H8.5V4.5z"/>
</svg></a>
								</li>
						 {% endif %}
							{% if is_granted ('ROLE_USER') == false %}
								<li class="nav-item">
									<a class="nav-link" href="{{path('login')}}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-bar-right" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M6 8a.5.5 0 0 0 .5.5h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L12.293 7.5H6.5A.5.5 0 0 0 6 8zm-2.5 7a.5.5 0 0 1-.5-.5v-13a.5.5 0 0 1 1 0v13a.5.5 0 0 1-.5.5z"/>
</svg></a>
								</li>
							{% endif %}
							{% if is_granted ('ROLE_USER') %}
								<li class="nav-item">
									<a class="nav-link" href="{{path('app_logout')}}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-bar-left" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M12.5 15a.5.5 0 0 1-.5-.5v-13a.5.5 0 0 1 1 0v13a.5.5 0 0 1-.5.5zM10 8a.5.5 0 0 1-.5.5H3.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L3.707 7.5H9.5a.5.5 0 0 1 .5.5z"/>
</svg></a>
								</li>
							{% endif %}
						</ul>
					</div>
				</div>
			</nav>
		</div>


		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}

		<div class="container"> {% block body %}{% endblock %}
			</div>
		</body>
	</html>
</nav></body></html>
