{% extends 'base.html.twig' %}

{% block body %}

	<img src="https://cdn.pixabay.com/photo/2021/08/12/10/38/mountains-6540497_960_720.jpg" alt="montagne">

	<section class="d-flex flex-wrap">
		{% for trick in tricks %}
			<article>
				<a
					href="{{path ('trick_show', {'id': trick.id}) }}">

					{% set picture = trick.pictures | first %}

					{% if picture %}
						<img src="{{ asset(picture.link)}}" alt="picture"><h1>{{ trick.name }}</h1>
					{% else %}
						<img src="https://cdn.pixabay.com/photo/2021/08/12/10/38/mountains-6540497_960_720.jpg" alt="picture" width="200" height="200"><h1>{{ trick.name }}</h1>
					{% endif %}

				</a>
			</article>
			<a href="{{path ('trick_edit', {'id': trick.id}) }}">
				<button type="button" class="btn btn-outline-primary">Modifier</button>
			</a>
			<a href="{{path ('trick_delete', {'id': trick.id}) }}" onclick="return confirm('Voulez-vous vraiment supprimer ce trick ?')">
				<button type="button" class="btn btn-outline-primary">Supprimer</button>
			</a>

		{% endfor %}
	</section>


{% endblock %}
