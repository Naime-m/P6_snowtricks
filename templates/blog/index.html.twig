{% extends 'base.html.twig' %}



{% block body %}

	<section class="tricks">
			<article>
				<h2> {{ trick.title }} </h2>
				<div class="metadata">Ecrit le {{ trick.date | date('d/m/Y') }} à {{ trick.date | date('H:i') }} dans la catégorie {{ trick.category}}</div>
				<div class="content">
					<img src="{ trick.image}}" alt="">
					{{ trick.content | raw }}
					<a href="{{ path('blog_show', {id: trick.id} ) }}" class="btn btn-primary">Lire la suite</a>
				</div>
			</article>
	</section>

{% endblock %}
