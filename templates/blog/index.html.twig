{% extends 'base.html.twig' %}

{% block body %}

	
		<div class="hero-image"><button type="button" class="btn btn-light">
			<a href="#figures">
				<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-arrow-down-circle" viewbox="0 0 16 16">
					<path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V4.5z"/>
				</svg>
			</a>
		</button></div>
		
	
	<style>
		.hero-image {
			position: relative;
			background: url('https://cdn.pixabay.com/photo/2021/08/12/10/38/mountains-6540497_960_720.jpg') no-repeat center center;
			background-size: cover;
			height: 100vh;
		}
		button.btn.btn-light {
			position: absolute;
    right: 5px; bottom: 5px
}
	</style>


	<section class="d-flex flex-wrap">
		{% for trick in tricks %}
			<div class="col-sm-8 col-md-8 col-lg-2">
				<section id="figures"></section>

				{% set picture = trick.pictures | first %}

				{% if picture %}
					<img src="{{ asset(picture.link)}}" class="img-thumbnail" alt="picture" width="200" height="200">
					<a href="{{path ('trick_show', {'id':trick.id,'slug': trick.name}) }}">{{ trick.name }}</a>

					{% if is_granted ('ROLE_USER') %}
						<a href="{{path ('trick_edit', {'id': trick.id, 'slug': trick.name}) }}">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewbox="0 0 16 16">
								<path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
								<path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
							</svg>
						</a>
						<a href="{{path ('trick_delete', {'id': trick.id, 'slug': trick.name}) }}" onclick="return confirm('Voulez-vous vraiment supprimer ce trick ?')">
							<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewbox="0 0 16 16">
								<path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
							</svg>
						</a>
					{% endif %}

				{% else %}
					<img src="https://cdn.pixabay.com/photo/2021/08/12/10/38/mountains-6540497_960_720.jpg" alt="picture" width="200" height="200"><h1>{{ trick.name }}</h1>
				{% endif %}

			</div>
		{% endfor %}
	</section>

{% endblock %}
